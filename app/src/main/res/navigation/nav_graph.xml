<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <action
        android:id="@+id/action_global_to_login"
        app:destination="@id/authentication"
        app:popUpTo="@id/nav_graph"
        app:popUpToInclusive="true" />

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.luiz.ghub.ui.SplashFragment"
        android:label="Splash Screen" >
        <action
            android:id="@+id/action_splash_to_login"
            app:destination="@id/authentication"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.luiz.ghub.ui.HomeFragment"
        android:label="Home" >
        <action
            android:id="@+id/action_homeFragment_to_projectDetailFragment"
            app:destination="@id/projectDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/projectDetailFragment"
        android:name="com.luiz.ghub.ui.ProjectDetailFragment"
        android:label="ProjectDetailFragment" >
        <action
            android:id="@+id/action_projectDetailFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment" />
    </fragment>

    <fragment
        android:id="@+id/userProfileFragment"
        android:name="com.luiz.ghub.ui.UserProfileFragment"
        android:label="UserProfileFragment" >
        <action
            android:id="@+id/action_userProfileFragment_to_projectDetailFragment"
            app:destination="@id/projectDetailFragment" />
    </fragment>

    <navigation
        android:id="@+id/authentication"
        app:startDestination="@id/loginFragment">

        <fragment
            android:id="@+id/loginFragment"
            android:name="com.luiz.ghub.ui.auth.LoginFragment"
            android:label="Login">
            <action
                android:id="@+id/action_login_to_register"
                app:destination="@id/registerFragment" />
            <action
                android:id="@+id/action_global_homeFragment"
                app:destination="@id/homeFragment"
                app:popUpTo="@id/nav_graph"
                app:popUpToInclusive="true" />
        </fragment>

        <fragment
            android:id="@+id/registerFragment"
            android:name="com.luiz.ghub.ui.auth.RegisterFragment"
            android:label="Register">
            <action
                android:id="@+id/action_registerFragment_to_register2Fragment"
                app:destination="@id/register2Fragment" />
            <action
                android:id="@+id/action_registerFragment_to_loginFragment"
                app:destination="@id/loginFragment" />
        </fragment>

        <fragment
            android:id="@+id/register2Fragment"
            android:name="com.luiz.ghub.ui.auth.Register2Fragment"
            android:label="Register Step 2">
            <action
                android:id="@+id/action_register2Fragment_to_loginFragment"
                app:destination="@id/loginFragment" />
            <action
                android:id="@+id/action_register2Fragment_to_homeFragment"
                app:destination="@id/homeFragment"
                app:popUpTo="@id/nav_graph"
                app:popUpToInclusive="true" />
        </fragment>
    </navigation>

</navigation>